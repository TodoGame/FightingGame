<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.testgame.ui.main.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_main_home"/>
    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.example.testgame.ui.main.fight.LocationsFragment"
        android:label="fragment_fight_locations"
        tools:layout="@layout/fragment_main_fight_locations" >
        <action
            android:id="@+id/action_locationsFragment_to_fightFragment"
            app:destination="@id/fightFragment" />
    </fragment>
    <fragment
        android:id="@+id/fightFragment"
        android:name="com.example.testgame.ui.main.fight.FightFragment"
        android:label="fragment_fight_room"
        tools:layout="@layout/fragment_main_fight_room" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.testgame.ui.main.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.testgame.ui.main.shop.ShopFragment"
        android:label="shop_fragment"
        tools:layout="@layout/fragment_main_shop" />
</navigation>